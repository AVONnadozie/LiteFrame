{
    "name": "avonnadozie/liteframe",
    "description": "The LiteFrame Framework.",
    "homepage": "https://github.com/avonnadozie/LiteFrame",
    "keywords": ["framework", "liteframe", "lightweight"],
    "license": "MIT",
    "type": "project",
    "require-dev": {
        "symfony/var-dumper": "^3.3",
        "fzaninotto/faker": "~1.7",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^6.2"
    },
    "config": {
        "vendor-dir": "components/composer"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('components/.env.php') || copy('components/.env.example.php', '.env');\""
        ]
    }

}
